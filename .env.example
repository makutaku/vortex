# Vortex Docker Environment Configuration
# Copy this file to .env and update with your settings

# Provider Selection (barchart, yahoo, ibkr)
BCU_PROVIDER=barchart

# Schedule for periodic downloads (cron format)
# Default: Daily at 8 AM
# Examples:
#   "0 8 * * *"    - Daily at 8 AM
#   "0 */6 * * *"  - Every 6 hours
#   "0 8 * * 1-5"  - Weekdays at 8 AM
#   "*/30 * * * *" - Every 30 minutes (testing)
BCU_SCHEDULE=0 8 * * *

# Run download immediately on container startup
BCU_RUN_ON_STARTUP=True

# Additional download command arguments
# Examples:
#   "--yes"                                    - Skip confirmation (default)
#   "--yes --force"                           - Force re-download existing data
#   "--yes --start-date 2024-01-01"          - Specific date range
#   "--yes --symbol AAPL MSFT"               - Specific symbols only
#   "--yes --backup"                         - Create Parquet backups
BCU_DOWNLOAD_ARGS=--yes

# Custom assets file path (inside container - matches CONFIG_DIR volume mount)
# Leave empty to use default provider assets  
# BCU_ASSETS_FILE=/config/my-custom-assets.json

# Logging level (DEBUG, INFO, WARNING, ERROR)
BCU_LOG_LEVEL=INFO

# Host directory mappings (mounted into container)
# Where downloaded data will be stored on host (maps to /data in container)
DATA_DIR=./data

# Where configuration files are stored on host (maps to /config in container)
CONFIG_DIR=./config

# Barchart credentials (if using Barchart provider)
# Add these to config/config.toml instead for better security:
# BARCHART_USERNAME=your_email@example.com
# BARCHART_PASSWORD=your_password

# Interactive Brokers settings (if using IBKR provider)
# IBKR_HOST=host.docker.internal  # Use this to connect to TWS on host
# IBKR_PORT=7497
# IBKR_CLIENT_ID=1