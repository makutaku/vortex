SHELL=/bin/bash
BASH_ENV="$BCU_REPO_DIR/container.env"

# Schedule job to download quotes from Barchart every day at 8 AM UTC
52 22 * * * source "$BCU_REPO_DIR/container.env" ; "$BCU_REPO_DIR/run_bc_utils.sh" 2>&1 | tee -a "$BCU_OUTPUT_DIR/bc_utils.log" >> /proc/1/fd/1

# Schedule job to check input environment variables and display "PING" runs at the top of every hour
* * * * * source "$BCU_REPO_DIR/container.env" ; "$BCU_REPO_DIR/ping.sh" 2>&1 | tee -a "$BCU_OUTPUT_DIR/ping.log" >> /proc/1/fd/1
